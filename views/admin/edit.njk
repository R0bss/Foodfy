{% extends "layoutAdmin.njk" %}

{% block content %}
  <div class="card_recipe">
    <section class="details">
      <div class="forms-actions">
        <form action="POST" action="/">
          <div class="title-content">
            <h3>Editando Receita</h3>
            <button type="submit" class="save">Salvar receita</button>
          </div>
  
          {% include "admin/fields.njk" %}
        
          <input type="hidden" name="" value="{{recipe.id}}"/>
        </form>
        
        <form id="form-delete" action="/members?_method=DELETE" method="post">
          <input type="hidden" name="id" value="{{ recipe.id }}">
          <button class="delete" type="submit">Deletar</button>
        </form>
      </div> 
    </section>	
  </div>


<script src="scripts.js"></script>
{% endblock %}