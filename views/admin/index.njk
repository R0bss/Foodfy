{% extends "layoutAdmin.njk" %}

{% block head %}
    <title>Foodfy</title>
{% endblock %}

{% block content %}

        <div class="admin_title">
            <h2>Gerenciar receitas</h2>         
        </div>

        <section class="admin_recipes">
            {% for item in items %}
                <div class="admin_card" id="{{loop.index0}}">
                    <div class="admin_card_image-container">
                        <img src="{{item.image}}" alt="{{item.title}}">
                    </div>
                    <div>
                        <div class="admin_card_content">
                            <p>{{item.title}}</p>
                        </div>
                        <div class="admin_card_info">
                            <p>por {{item.author}}</p>
                            <a href="/admin/recipes/{{loop.index0}}">Visualizar</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </section>
